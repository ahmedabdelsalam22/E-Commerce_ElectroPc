@using ElectroPc_Models.Dtos;
@model IEnumerable<ProductDto>
@{
    ViewData["Title"] = "Index";
}


<div>

    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-patch-plus"></i> &nbsp; Create New Product
            </a>
        </div>
    </div>

    <br />

    <table class="table table-striped" style="width:100%">
        <thead>
            <tr>
                @*  <th>ProductId</th> *@
                <th>Name</th>
                <th>Brand</th>
                <th>Processor</th>
                <th>RamSizeGB</th>
                <th>StorageType</th>
                <th>WeightKg</th>
                <th>Dimensions</th>
                <th>IsTouchscreen</th>
                <th>HasWebcam</th>
                <th width="10%">Update</th>
                <th width="10%">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model)
            {
                <tr>
                    <td>@m.Name</td>
                    <td>@m.Brand</td>
                    <td>@m.Processor</td>
                    <td>@m.RamSizeGB</td>
                    <td>@m.StorageType</td>
                    <td>@m.WeightKg</td>
                    <td>@m.Dimensions</td>
                    <td>@m.IsTouchscreen</td>
                    <td>@m.HasWebcam</td>
                    <td width="10%">
                        <a asp-action="Upsert" class="btn btn-primary" asp-route-id="@m.ProductId">
                            <i class="bi bi-pencil-square"></i> &nbsp; Update
                        </a>
                    </td>
                    <td width="10%">
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@m.ProductId">
                            <i class="bi bi-trash3-fill"></i> &nbsp; Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>


</div>